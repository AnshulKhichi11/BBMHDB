<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointments</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>All Appointments</h1>

       <!-- include kar raha hu flash file popup kar ne ke liye-->
        <%- include('flash.ejs') %>
        <table class="table">
            <thead>
                <tr>
                    <th>Department</th>
                    <th>Patient Name</th>
                    <th>Phone</th>
                    <th>Time</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% appointments.forEach(appointment => { %>
                    <tr>
                        <td><%= appointment.department %></td>
                        <td><%= appointment.patientName %></td>
                        <td><%= appointment.phone %></td>
                        <td><%= appointment.time %></td>
                        <td><%= appointment.Date.toLocaleString("en-IN") %></td>
                        <td><form method="post" action="/appointments/<%= appointment._id %>?_method=DELETE">
                            <button class="btn btn-danger" type="submit">Delete Appointment</button>
                        </form></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <form action="/appointment" style="margin-left: 10vw;">
        <button class="btn btn-dark" type="submit">< Back</button>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>